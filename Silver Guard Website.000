    <!-- Contact Section -->
    <section class="contact" id="contact">
        <div class="container">
            <h2 class="section-title">Get In Touch</h2>
            
            <div class="contact-container">
                <div class="contact-form-container">
                    <form id="contactForm">
                        <div class="form-group">
                            <label for="name">Full Name</label>
                            <input type="text" id="name" class="form-control" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" class="form-control" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="tel" id="phone" class="form-control">
                        </div>
                        
                        <div class="form-group">
                            <label for="service">Service Interest</label>
                            <select id="service" class="form-control form-select" required>
                                <option value="">Select a service</option>
                                <option value="Scam Protection">Scam Protection</option>
                                <option value="Personal Tech Setup">Personal Tech Setup</option>
                                <option value="Digital Banking Guidance">Digital Banking Guidance</option>
                                <option value="Basic Plan">Basic Plan ($100/month)</option>
                                <option value="Plus Plan">Plus Plan ($120/month)</option>
                                <option value="Premium Plan">Premium Plan ($150/month)</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="message">How Can We Help You?</label>
                            <textarea id="message" class="form-control" required></textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-primary form-submit">Send Message</button>
                        
                        <div class="success-message" id="successMessage">
                            <i class="fas fa-check-circle"></i>
                            <p>Thank you for your message! We'll get back to you within 24 hours.</p>
                        </div>
                    </form>
                </div>
                
                <div class="contact-sidebar">
                    <div class="contact-methods card">
                        <h3>Other Ways to Reach Us</h3>
                        
                        <div class="contact-method">
                            <div class="contact-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div>
                                <h4>Call Us</h4>
                                <p>(204) 384-6643</p>
                            </div>
                        </div>
                        
                        <div class="contact-method">
                            <div class="contact-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h4>Email Us</h4>
                                <p>help@silverguard.com</p>
                            </div>
                        </div>
                        
                        <div class="contact-method">
                            <div class="contact-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <h4>Visit Our Office</h4>
                                <p>123 Safety Street, Digital City</p>
                            </div>
                        </div>
